let x = 5;

// PREFIX
console.log(++x); // Do it first: x becomes 6, then print â†’ 6
console.log(x);   // x is now 6

// Reset
x = 5;

// POSTFIX
console.log(x++); // Use it first: print 5, then x becomes 6
console.log(x);   // Now x is 6

